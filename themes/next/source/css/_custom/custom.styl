// Custom styles.

h1 {
  font-size: 150%;
  margin: 0.67em 0;
  padding: 5px 20px 5px 10px;
  border-radius: 3px;
  border-left: 8px solid #006969;
  background: #E0F0E9;
}

h2 {
  font-size: 130%;
  padding: 3px 20px 3px 20px;  
  border-radius: 3px;
  border-left: 6px solid #008787;
  background: #e6f3ed;
}

h3 {
  font-size: 110%;
  padding: 1px 20px 3px 30px;
  border-radius: 3px;
  border-left: 4px solid #00a5a5;
  background: #ecf6f1;
}



